#!/bin/sh

usage="usage: $0 <start | stop>"
pid_path="/tmp/flim.pid"

function start() {
  flimd &
  echo $! > $pid_path
}

function stop() {
  pid=`cat $pid_path`
  if kill -0 $pid &> /dev/null; then
    kill -TERM $pid
  fi
}

if [ "$1" = "start" ]; then
  stop
  start

elif [ "$1" = "stop" ]; then
  stop

else
  echo $usage
fi
